<% if logged_in? %>
  <p>ログインユーザー：<%= current_user.name %></p>
<% else %>
  <p>ログインしてません</p> <!--仮置き-->
<% end %>

<h1>タスク一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>ステータス</th>
      <th>タスク</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.status %></td>
      <td><%= task.content %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= paginate @tasks %>
</div>

<%= link_to '新規タスクの作成', new_task_path, class: 'btn btn-outline-success' %>